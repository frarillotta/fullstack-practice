{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "pretty": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "es2015.promise",
      "dom",
      "es2017"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./src/**/*.spec.ts"
  ]
}
